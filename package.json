{
  "name": "ohvue",
  "type": "module",
  "version": "0.0.0",
  "description": "Vue.js UI component library, focusing on the best UX",
  "author": "litingyes <luz.liting@gmail.com> (https://litingyes.top/)",
  "license": "MIT",
  "keywords": [
    "vuejs",
    "vue3",
    "ui-components"
  ],
  "scripts": {
    "storybook:dev": "pnpm --filter @ohvue/storybook dev",
    "storybook:build": "pnpm --filter @ohvue/storybook build",
    "build": "pnpm -r build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "peerDependencies": {
    "vue": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.13.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@types/node": "22",
    "commitizen": "^4.3.1",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-storybook": "^0.11.2",
    "husky": "^9.1.7",
    "inquirer": "^12.3.2",
    "lint-staged": "^15.3.0",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
